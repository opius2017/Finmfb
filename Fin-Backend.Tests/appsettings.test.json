{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=FinTechDB_Test;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": "localhost:6379,abortConnect=false,ssl=false"
  },
  "JwtSettings": {
    "Key": "TestSecretKeyForDevelopmentPurposesOnly",
    "Issuer": "FinTechAPI.Test",
    "Audience": "FinTechClient.Test",
    "DurationInMinutes": 5
  },
  "Redis": {
    "ConnectionString": "localhost:6379,abortConnect=false,ssl=false",
    "InstanceName": "FinMFB_Test:"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/test"
  },
  "EventBus": {
    "SubscriptionClientName": "fintech_test",
    "RetryCount": 1
  },
  "ResiliencePolicy": {
    "CircuitBreaker": {
      "FailureThreshold": 2,
      "BreakDurationSeconds": 5
    },
    "Retry": {
      "MaxRetryCount": 1,
      "InitialDelaySeconds": 1
    },
    "Timeout": {
      "TimeoutSeconds": 5
    },
    "Bulkhead": {
      "MaxParallelization": 5,
      "MaxQueueLength": 5
    }
  },
  "EmailSettings": {
    "SmtpServer": "localhost",
    "SmtpPort": 1025,
    "EnableSsl": false,
    "SmtpUsername": "test",
    "SmtpPassword": "test",
    "FromEmail": "test@example.com",
    "FromName": "Test",
    "TemplatesPath": "EmailTemplates"
  },
  "SecurityPolicies": {
    "PasswordRequirements": {
      "MinimumLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true
    },
    "MfaPolicy": {
      "RequireMfa": false,
      "AllowedMfaMethods": ["App", "Email"],
      "MfaTimeoutMinutes": 2,
      "BackupCodesCount": 5,
      "MfaSessionDurationDays": 7
    },
    "SessionPolicy": {
      "SessionTimeoutMinutes": 10,
      "MaxConcurrentSessions": 2,
      "EnforceIpConsistency": false,
      "DeviceVerificationRequired": false,
      "MaxDevicesPerUser": 2,
      "RememberDeviceDays": 30
    },
    "SecurityAudit": {
      "EnabledAuditEvents": [
        "Login", "Logout", "PasswordChange", "MfaSetup"
      ],
      "RetentionPeriodDays": 30,
      "NotifyOnSuspiciousActivity": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}