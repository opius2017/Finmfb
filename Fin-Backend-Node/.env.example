# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
# For Windows Authentication (Recommended for local development):
DATABASE_URL="sqlserver://localhost:1433;database=FinMFBDb;integratedSecurity=true;trustServerCertificate=true;encrypt=true"
# For SQL Server Authentication (if needed):
# DATABASE_URL="sqlserver://localhost:1433;database=FinMFBDb;user=sa;password=YourPassword123;trustServerCertificate=true;encrypt=true"
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:4200

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@fintech.com

# File Storage (S3 Compatible)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=fintech-documents
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=true

# External Services
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
NIBSS_API_KEY=your-nibss-api-key
NIBSS_API_URL=https://api.nibss.com

# Security
MFA_ISSUER=FinTech
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Background Jobs
QUEUE_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000
