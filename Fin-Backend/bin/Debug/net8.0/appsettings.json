{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=FinTechDB;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": "localhost:6379,abortConnect=false,ssl=false"
  },
  "JwtSettings": {
    "Key": "ThisIsASecureKeyForDevelopmentPurposesOnlyAndShouldBeReplacedInProduction",
    "Issuer": "FinTechAPI",
    "Audience": "FinTechClient",
    "DurationInMinutes": 60,
    "RefreshTokenDurationInDays": 30,
    "ClockSkew": 0
  },
  "SocialLoginSettings": {
    "Enabled": true,
    "Providers": {
      "Google": {
        "Enabled": true,
        "ClientId": "google-client-id",
        "ClientSecret": "google-client-secret",
        "RedirectUri": "https://api.finmfb.com/api/sociallogin/google/callback",
        "Scope": "openid profile email"
      },
      "Facebook": {
        "Enabled": true,
        "ClientId": "facebook-app-id",
        "ClientSecret": "facebook-app-secret",
        "RedirectUri": "https://api.finmfb.com/api/sociallogin/facebook/callback",
        "Scope": "public_profile email"
      },
      "Microsoft": {
        "Enabled": true,
        "ClientId": "microsoft-client-id",
        "ClientSecret": "microsoft-client-secret",
        "RedirectUri": "https://api.finmfb.com/api/sociallogin/microsoft/callback",
        "Scope": "openid profile email User.Read"
      }
    }
  },
  "Redis": {
    "ConnectionString": "localhost:6379,abortConnect=false,ssl=false",
    "InstanceName": "FinMFB:"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },
  "EventBus": {
    "SubscriptionClientName": "fintech",
    "RetryCount": 5
  },
  "ResiliencePolicy": {
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "BreakDurationSeconds": 30
    },
    "Retry": {
      "MaxRetryCount": 3,
      "InitialDelaySeconds": 2
    },
    "Timeout": {
      "TimeoutSeconds": 10
    },
    "Bulkhead": {
      "MaxParallelization": 20,
      "MaxQueueLength": 10
    }
  },
  "ApiGateway": {
    "Endpoints": {
      "Authentication": {
        "Url": "https://auth.finmfb.local",
        "HealthCheckPath": "/health"
      },
      "ClientPortal": {
        "Url": "https://clientportal.finmfb.local",
        "HealthCheckPath": "/health"
      },
      "BankingIntegration": {
        "Url": "https://banking.finmfb.local",
        "HealthCheckPath": "/health"
      }
    }
  },
  "EmailSettings": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "SmtpUsername": "notifications@finmfb.com",
    "SmtpPassword": "SecurePassword123!",
    "FromEmail": "security@finmfb.com",
    "FromName": "FinMFB Security",
    "TemplatesPath": "EmailTemplates"
  },
  "ApplicationInsights": {
    "ConnectionString": "InstrumentationKey=00000000-0000-0000-0000-000000000000;IngestionEndpoint=https://westus2-0.in.applicationinsights.azure.com/;LiveEndpoint=https://westus2.livediagnostics.monitor.azure.com/"
  },
  "RateLimiting": {
    "IsEnabled": true,
    "DefaultLimit": 100,
    "DefaultPeriodInSeconds": 60,
    "ExcludedPaths": [
      "/health",
      "/metrics",
      "/swagger"
    ],
    "WhitelistedClients": [
      "apikey:internal-service-key"
    ],
    "EndpointLimits": [
      {
        "Path": "/api/auth",
        "Method": "POST",
        "Limit": 5,
        "PeriodInSeconds": 60
      },
      {
        "Path": "/api/transactions",
        "Method": "POST",
        "Limit": 30,
        "PeriodInSeconds": 60
      },
      {
        "Path": "/api/reports",
        "Limit": 10,
        "PeriodInSeconds": 60
      }
    ]
  },
  "SecurityPolicies": {
    "PasswordRequirements": {
      "MinimumLength": 12,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true
    },
    "MfaPolicy": {
      "RequireMfa": true,
      "AllowedMfaMethods": ["App", "Email", "SMS"],
      "MfaTimeoutMinutes": 5,
      "BackupCodesCount": 10,
      "MfaSessionDurationDays": 30
    },
    "SessionPolicy": {
      "SessionTimeoutMinutes": 30,
      "MaxConcurrentSessions": 3,
      "EnforceIpConsistency": true,
      "DeviceVerificationRequired": true,
      "MaxDevicesPerUser": 5,
      "RememberDeviceDays": 90
    },
    "SecurityAudit": {
      "EnabledAuditEvents": [
        "Login", "Logout", "PasswordChange", "MfaSetup", "SocialLoginLinking", 
        "SecuritySettingsChange", "DeviceRegistration", "SuspiciousActivity"
      ],
      "RetentionPeriodDays": 90,
      "NotifyOnSuspiciousActivity": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/fintech-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*"
}