{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=PRODUCTION_SQL_SERVER;Database=CooperativeLoanDB;User Id=PRODUCTION_USER;Password=PRODUCTION_PASSWORD;Encrypt=True;TrustServerCertificate=False;MultipleActiveResultSets=true",
    "RedisConnection": "PRODUCTION_REDIS_SERVER:6379,password=PRODUCTION_REDIS_PASSWORD,ssl=True,abortConnect=False",
    "HangfireConnection": "Server=PRODUCTION_SQL_SERVER;Database=CooperativeLoanHangfire;User Id=PRODUCTION_USER;Password=PRODUCTION_PASSWORD;Encrypt=True;TrustServerCertificate=False"
  },
  "JwtSettings": {
    "SecretKey": "PRODUCTION_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS_CHANGE_THIS!",
    "ExpiryMinutes": 30,
    "RefreshTokenExpiryDays": 7
  },
  "NotificationSettings": {
    "SendGridApiKey": "PRODUCTION_SENDGRID_API_KEY",
    "SendGridFromEmail": "noreply@yourproductiondomain.com",
    "TwilioAccountSid": "PRODUCTION_TWILIO_ACCOUNT_SID",
    "TwilioAuthToken": "PRODUCTION_TWILIO_AUTH_TOKEN",
    "TwilioPhoneNumber": "PRODUCTION_TWILIO_PHONE",
    "EnableEmailNotifications": true,
    "EnableSmsNotifications": true
  },
  "BackgroundJobSettings": {
    "EnableBackgroundJobs": true
  },
  "SecuritySettings": {
    "EnableTwoFactorAuth": true,
    "MaxLoginAttempts": 3,
    "LockoutDurationMinutes": 60
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://yourproductiondomain.com",
      "https://app.yourproductiondomain.com"
    ]
  },
  "ApplicationInsights": {
    "InstrumentationKey": "PRODUCTION_APPLICATION_INSIGHTS_KEY",
    "EnableAdaptiveSampling": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    }
  }
}
