<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>FinTech</RootNamespace>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="8.0.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="src/Presentation/WebAPI/appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="src/Presentation/WebAPI/appsettings.Development.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Exclude problematic files temporarily -->
  <ItemGroup>
    <Compile Remove="Application/**/*.cs" />
    <Compile Remove="Core/**/*.cs" />
    <Compile Remove="Domain/**/*.cs" />
    <Compile Remove="Infrastructure/**/*.cs" />
    <Compile Remove="src/**/*.cs" />
    <Compile Remove="Examples/**/*.cs" />
    <Compile Remove="EmailTemplates/**/*.cs" />
  </ItemGroup>

  <!-- Include only safe files -->
  <ItemGroup>
    <Compile Include="src/Presentation/WebAPI/Program.cs" />
    <Compile Include="Controllers/HealthController.cs" />
  </ItemGroup>

</Project>